<!-- This is the BARBER PROFILE -->
<div class="card">
  <%# <div class="container d-flex" id="barber-signup">
    </div> %>

  <% if @barber.photo.attached? %>
    <div class="picture"><%= cl_image_tag @barber.photo.key, :class => "photo" %></div>
  <% end %>
  <div class="full-name">
    <%= @barber.full_name %>
  </div>
  <div class="phone"><i class="fas fa-phone-alt"></i>
    <%= @barber.phone_number %>
  </div>
  <div class="address"><i class="fas fa-city"></i>
    <%= @barber.address %>
  </div>
  <div class="email"><i class="fab fa-instagram"></i>
    <%= @barber.email %>
  </div>

  <!-- if I am the profile owner I can edit my info -->


  <%# TEMP LINK TO CREATE or REJOIN CHATROOM - STEPH %>
  <div class="create-chatroom">
    <% if @previous_chat %>
      <%= link_to "Keep chatting", chatroom_path(@chatroom, recipient_id: @barber.id) %>
    <% else %>
      <%= link_to "Chat with #{@barber.first_name.capitalize}", new_chatroom_path(recipient_id: @barber.id) %>
    <% end %>
  </div>


  <%= link_to 'Edit Profile', edit_user_path if current_user == @barber %>
  <div class="description1">
    About me:
  </div>
  <div class="description">
    <%= @barber.description %>
  </div>
  <!-- button to book an appointment -->
  <div class="booking-button">
    <%= link_to "Book Now", new_appointment_path(@barber), class: "btn btn-gradient booking-button" %> <i class="fas fa-calendar-alt"></i>
  </div>


  <!-- tab with reviews and services -->
    <%= render 'shared/tabs_barber_profile' %>
</div>
