<div class="container nav1">
  <div class="row justify-content-center">
    <div class="col-12">
      <h1>CLEAN KUT'S</h1>
    </div>
  </div>
</div>

<div class="image"></div>
<!-- IMPLEMENT A SEARCH BAR -->
<!-- search bar -->
<div class="container location">
  <div class="row justify-content-center">
    <div class="col-3">
      <div class=search-bars>
      <!-- search-bar -->
        <div  id="location">
        <p>SEARCH
          <i class="fas fa-search-location search_icon"></i>
        </p></div>
        <!--end search-bar -->
      </div>
    </div>
  </div>
</div>


<!-- part2 -->
<div class="part2">
<!--  Deck of 5 cards-->

      <h2> TOP 5 BARBERS NEAR YOU</h2>
    </div>
  </div>
</div>

<div >
  <% @barbers.first(5).each do |barber| %>

      <!-- on the left: side: image picture of the barber   -->



    <div class="card">
      <div class="row">
        <div class="col-1">
        </div>


        <div class="col-4 image">
          <div class="picture"><%= cl_image_tag barber.photo.key, :class => "photo" %></div>
        </div>
        <div class="col-4">
          <div class="container ">
            <p><%= link_to barber.full_name, barber %></p>
            <p><%= barber.description %></p>
          </div>
      <!-- in the middle: info to put in the card are: barber name barber.description barber.rating no rating so far -->
      </div>
    <div class="col-3">
       <div class="row heart">
        <i class="fas fa-heart"></i>
        <!-- bubble for chat with the barber -->
        </div>
        <div class="row bubble">
        <i class="far fa-comment"></i>
        <!-- marker to locate the barber on a map   -->
        </div>
        <div class="row marker">
        <i class="fas fa-map-marker-alt"></i>
        </div>
      </div>
      <div class="col-1">
      </div>
    </div>
  </div>
<% end %>
</div>
<!--  end Deck of 5 cards-->

<!-- IMPLEMENT A MAP with the list of the barbers on the page -->
<div class="map"></div>
</div>
